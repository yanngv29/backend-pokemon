{
    "extends": "strongloop",
    "env": {
      "node": true,
      "es6": true,
      "mocha": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "max-len": ["error",{
        "code": 400,
        "ignoreComments": true
      }],
      "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
      "eqeqeq": ["off"]
    }
  }
  